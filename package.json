{
  "name": "displacement-map",
  "version": "0.0.0",
  "description": "Mid-point displacement map",
  "scripts": {
    "prepublish": "npm run build",
    "prepack": "npm run make",
    "watch": "parallelshell 'npm run livereload' 'npm run watch:styles' 'npm run watch:scripts' 'npm run watch:html'",
    "test": "babel-node ./spec/index.js ./src/**/*.test.js",
    "clean": "rm -rf ./dist/ && mkdir ./dist",
    "livereload": "livereload ./dist/",
    "lint": "eslint ./src/*.js",
    "build:styles": "ho-compile -p src,node_modules,src/core/styles --source-map < ./src/styles.less | autoprefixer -b \"last 2 versions\" > ./dist/styles.css",
    "make:styles": "ho-compile -p src,node_modules,src/core/styles -c < ./src/styles.less | autoprefixer -b \"last 2 versions \"  | cleancss > ./dist/styles.css",
    "watch:styles": "find src -name '*.less' -print0 | xargs -0 ./bin/lesswatch -e src/styles.less -o ./dist/styles.css",
    "build:scripts": "NODE_PATH=./src/components browserify ./src/main.jsx --extension .jsx --noparse react -t babelify -t aliasify -t flowcheck --debug > ./dist/main.js",
    "make:scripts": "NODE_PATH=./src/components NODE_ENV=prod browserify ./src/main.jsx --extension .jsx -t babelify | uglifyjs > ./dist/main.js",
    "watch:scripts": "NODE_PATH=./src/components watchify ./src/main.jsx --extension .jsx --noparse react -t babelify -t aliasify -t flowcheck --debug -o ./dist/main.js -v",
    "make:polyfill": "browserify ./src/polyfill.js | uglifyjs > ./dist/polyfill.js",
    "make:assets": "cp -r ./src/assets ./dist/assets",
    "make:html": "mustache package.json ./src/tmpl/index.hjs > ./dist/index.html",
    "watch:html": "watch 'npm run make:html' ./src/tmpl",
    "prebuild": "npm run clean",
    "build": "npm run make:assets && npm run make:html && npm run make:polyfill && npm run build:scripts && npm run build:styles",
    "premake": "npm run clean",
    "make": "NODE_ENV=prod npm run make:assets && npm run make:html && npm run make:polyfill && npm run make:scripts && npm run make:styles"
  },
  "aliasify": {
    "aliases": {
      "react": "react/dist/react"
    }
  },
  "keywords": [
    "yeoman",
    "generator",
    "babel",
    "es2015",
    "react",
    "less",
    "fetch"
  ],
  "author": "Matt Styles",
  "repository": {
    "type": "git",
    "url": "git://github.com/mattstyles/displacement-map.git"
  },
  "bugs": {
    "url": "https://github.com/mattstyles/displacement-map/issues"
  },
  "homepage": "https://github.com/mattstyles/displacement-map",
  "license": "WTFPL",
  "dependencies": {
    "babel": "^5.2.17",
    "classnames": "^2.1.1",
    "eventemitter3": "^1.1.0",
    "flux": "^2.0.3",
    "normalize.css": "^3.0.3",
    "react": "^0.13.3",
    "react-router": "^0.13.3",
    "webfontloader": "1.5.18",
    "whatwg-fetch": "^0.8.1"
  },
  "devDependencies": {
    "aliasify": "^1.7.2",
    "autoprefixer": "^5.1.1",
    "autoprefixer-transform": "^0.3.1",
    "babel-eslint": "^3.1.1",
    "babelify": "^6.1.0",
    "browserify": "^10.1.3",
    "chalk": "^1.0.0",
    "chokidar": "^1.0.1",
    "clean-css": "^3.2.9",
    "eslint": "^0.21.0",
    "flowcheck": "^0.2.6",
    "glob": "^5.0.10",
    "ho-compiler": "^0.4.0",
    "ho-conformance": "^0.1.0",
    "livereload": "^0.3.7",
    "minimist": "^1.1.1",
    "mustache": "^2.0.0",
    "parallelshell": "^1.1.1",
    "tape": "^4.0.0",
    "uglifyjs": "^2.4.10",
    "watch": "^0.16.0",
    "watchify": "^3.2.1"
  }
}
